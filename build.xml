<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac debug="true" debuglevel="lines,vars,source" includeantruntime="false" srcdir="src" destdir="build/classes"/>
    </target>

    <target name="run">
      <java 
        classpath="build/classes:lib/mysql-connector-java-5.1.33-bin.jar"
        classname="com.renomad.qarma.Database_access" 
        fork="true"
        />
    </target>

</project>

